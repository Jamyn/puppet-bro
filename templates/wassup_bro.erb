#!/usr/bin/ruby
state = ARGV[0]
if state == 'status'
  %x(<%= @basedir %>/bin/broctl status 2>&1)
   if $?.exitstatus != 0
     puts "Bro is stopped"
   else
     puts "Bro is running"
   end
elsif state == 'stop'
  %x(<%= @basedir %>/bin/broctl stop 2>&1)
elsif state == 'start'
  %x(<%= @basedir %>/bin/broctl install 2>&1)
  %x(<%= @basedir %>/bin/broctl start 2>&1)
elsif state == 'restart'
  %x(<%= @basedir %>/bin/broctl stop 2>&1)
  %x(<%= @basedir %>/bin/broctl install 2>&1)
  %x(<%= @basedir %>/bin/broctl start 2>&1)
else
  puts 'Invalid Command'
end
