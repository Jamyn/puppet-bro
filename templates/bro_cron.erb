#!/usr/bin/env ruby
def bro_cron
  %x(<%= @basedir %>/bin/broctl cron 2>&1)
end
def bro_status
  cache_file_dir='/dev/shm'
  cache_file=cache_file_dir+'/bro_state.txt'
  %x(<%= @basedir %>/bin/broctl cron 2>&1)
  %x(<%= @basedir %>/bro/bin/broctl status 2>&1)
  if $?.exitstatus != 0
    status = '1'
  else
    status = '0'
  end
  File.open(cache_file, 'w') { |file| file.write(status) }
end
"#{bro_cron}"
"#{bro_status}"
